<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.client.imagerecognition.GalleryView
        android:id="@+id/gallery_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/takePhotoButton"/>

    <Button
        android:id="@+id/realTimeDetectionButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="25dp"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@android:color/white"
        android:text="@string/real_time_detection_button_text"/>
    <Button
        android:id="@+id/takePhotoButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="25dp"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@android:color/white"
        android:text="@string/add_image_button_text"/>
</RelativeLayout>